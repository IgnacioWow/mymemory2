<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="8dp">

    <TextView android:id="@+id/tvPos" android:layout_width="32dp"
        android:layout_height="wrap_content" android:textStyle="bold"/>

    <TextView android:id="@+id/tvName" android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_weight="1"/>

    <TextView android:id="@+id/tvMoves" android:layout_width="64dp"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvTime" android:layout_width="64dp"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvDate" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
